<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="ru.profitcode.ketocalc.ReceiptEditorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin">

            <!-- Name field -->
            <TextView
                android:text="@string/receipt_name"
                style="@style/FieldNameStyle" />

            <EditText
                android:id="@+id/edit_receipt_name"
                android:hint="@string/hint_receipt_name"
                android:inputType="textCapWords"
                style="@style/EditorFieldStyle" />

            <!-- Meal field -->
            <TextView
                android:text="@string/receipt_meal"
                style="@style/FieldNameStyle" />

            <!-- Meal drop-down spinner -->
            <Spinner
                android:id="@+id/spinner_meal"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"/>

            <!-- Ingredients field -->
            <TextView
                android:text="@string/receipt_ingredients"
                style="@style/FieldNameStyle" />

            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TableLayout
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3,4">
                <TableRow
                    android:id="@+id/caption_row">
                    <TextView
                        android:text="@string/receipt_product_caption_product"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <TextView
                        android:text="@string/receipt_product_caption_weight"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:text="@string/receipt_product_caption_protein"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:text="@string/receipt_product_caption_fat"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:text="@string/receipt_product_caption_carbo"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:text=""
                        />
                </TableRow>

            </TableLayout>

            <!-- Calculate field -->
            <TextView
                android:text="@string/receipt_calculate"
                style="@style/FieldNameStyle" />

            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <!-- Bzu label field -->
                    <TextView
                        android:text="@string/receipt_summary_label"/>

                    <TextView
                        android:text="@string/receipt_summary_calculated_protein"
                        />

                    <TextView
                        android:text="@string/receipt_summary_calculated_fat"
                        />

                    <TextView
                        android:text="@string/receipt_summary_calculated_carbo"
                        />
                </TableRow>

                <TableRow>
                    <!-- Bzu calculated label field -->
                    <TextView
                        android:text="@string/receipt_summary_calculated_label"/>

                    <TextView
                        android:text="@string/receipt_summary_calculated_protein"

                        />

                    <TextView
                        android:text="@string/receipt_summary_calculated_fat"
                        />

                    <TextView
                        android:text="@string/receipt_summary_calculated_carbo"
                        />
                </TableRow>
            </TableLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_add" />
    </RelativeLayout>
</ScrollView>