<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="ru.profitcode.ketocalc.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receipts_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/receipts_btn"
                android:textSize="30sp"
                android:padding="10dp"
                android:background="@color/colorReceiptsBtn"/>

            <TextView
                android:id="@+id/dishes_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dishes_btn"
                android:textSize="30sp"
                android:padding="10dp"
                android:background="@color/colorDishesBtn"/>

            <TextView
                android:id="@+id/products_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/products_btn"
                android:textSize="30sp"
                android:padding="10dp"
                android:background="@color/colorProductsBtn"/>

            <TextView
                android:id="@+id/settings_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_btn"
                android:textSize="30sp"
                android:padding="10dp"
                android:background="@color/colorSettingsBtn"/>

            <TextView
                android:id="@+id/about_pro_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_btn"
                android:textSize="30sp"
                android:padding="10dp"
                android:background="@color/colorAboutProBtn"/>

        </LinearLayout>

        <TextView
            android:id="@+id/about_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_btn"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/colorAboutBtn"
            android:layout_alignParentBottom="true"/>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>
        <!--ads:adUnitId="ca-app-pub-9772487056729057/6478130320"-->

    </RelativeLayout>

</ScrollView>
