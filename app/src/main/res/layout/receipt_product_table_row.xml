<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredient_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/colorIngedientText"
            tools:text="Масло" />

        <TextView
            android:id="@+id/ingredient_product_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/colorIngedientText"
            tools:text="5/10/20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ingredient_weight_decrease_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="40dp"
                android:maxWidth="40dp"
                android:text="-"
                android:textColor="@color/colorIngedientBtnText" />

            <EditText
                android:id="@+id/ingredient_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="4"
                android:inputType="number"
                android:textColor="@color/colorIngedientText"
                android:hint="0000"
                android:textColorHint="#00FFFFFF"
                tools:text="1000" />

            <Button
                android:id="@+id/ingredient_weight_increase_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="40dp"
                android:maxWidth="40dp"
                android:text="+"
                android:textColor="@color/colorIngedientBtnText" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ingredient_protein"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/colorIngedientText"
        android:layout_marginBottom="16dp"
        tools:text="4.5" />

    <TextView
        android:id="@+id/ingredient_fat"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/colorIngedientText"
        android:layout_marginBottom="16dp"
        tools:text="82" />

    <TextView
        android:id="@+id/ingredient_carbo"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/colorIngedientText"
        android:layout_marginBottom="16dp"
        tools:text="1" />

    <Button
        android:id="@+id/ingredient_remove_btn"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="-"
        android:minWidth="40dp"
        android:maxWidth="40dp"
        android:textColor="@color/colorIngedientBtnText" />

</TableRow>