<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".ReceiptsActivity">

    <TextView
        android:id="@+id/receipts_list_receipt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorReceiptName"
        tools:text="Рецепт 1" />

    <TextView
        android:id="@+id/receipts_list_receipt_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceSmall"
        android:background="@color/colorBreakfastMeal"
        android:padding="5dp"
        tools:text="Завтрак"/>


    <TableLayout
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">
    </TableLayout>

    <TextView
        android:id="@+id/receipts_list_receipt_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/colorReceiptNote"
        tools:text="Примечание" />

</LinearLayout>