<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="ru.profitcode.ketocalc.AboutProActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="@dimen/list_adv_layout_marginBottom">

            <TextView
                android:id="@+id/about_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_version"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorText"/>

            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <fragment
                android:id="@+id/youtube_player_fragment"
                android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/install_pro_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/install_pro_version"
                android:layout_gravity="bottom|center_horizontal"/>

            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro"
                android:textSize="14sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro_1"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro_2"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro_3"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro_4"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro_5"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro_6"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_pro_intro_7"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/adViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
        </FrameLayout>


    </RelativeLayout>

</ScrollView>
